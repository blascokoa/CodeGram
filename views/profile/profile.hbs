<div id="total" class="flex-row flex-start">
  <div class="flex-column box-border padding-m">
    <div class="flex-column flex-centered-row">
      <div class="circular--landscape circular--landscape-size">
        <img 
          src="{{myProfile.profile_pic}}"

          alt="profile's picture" width="150"
        />
      </div>
      <div
        class="d-flex flex-column bd-highlight mb-3 profile-center flex-centered-row"
      >
        <h4>@{{myProfile.username}}</h4>
        <span>{{myProfile.bio}}</span>

        <div class="flex-row">
          <div class="set-style">
            <a data-bs-toggle="modal" data-bs-target="#exampleModal">{{count
                myProfile.followers
              }}
              followers
            </a>
            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5
                      class="modal-title"
                      id="exampleModalLabel"
                    >Followers</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    {{#each myFollowers}}
                    <div class="d-flex remove-style margin-bottom-line">
                      <img
                        class="rounded--img"
                        src="{{this.profile_pic}}"
                        alt=""
                        width="20px"
                        height="20px"
                      />
                      <a href="/profile/{{this._id}}">{{this.username}}</a>
                      </div>
                    {{/each}}
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >Close</button>
                    <form action="/profile/followers/{{myProfile._id}}">
                      <button class="btn btn-success">See more followers</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            {{! aqui acaba modal }}
          </div>
          <div class="set-style margin-left">
            <a data-bs-toggle="modal" data-bs-target="#exampleModal2">
              {{count myProfile.followings}}
              followings</a>
            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal2"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-sm">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5
                      class="modal-title"
                      id="exampleModalLabel"
                    >followings</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    {{#each myFollowings}}
                    <div class="d-flex remove-style margin-bottom-line">
                      <img
                        class="rounded--img"
                        src="{{this.profile_pic}}"
                        alt=""
                        width="20px"
                        height="20px"
                      />
                      <a href="/profile/{{this._id}}">{{this.username}}</a>
                      </div>
                    {{/each}}
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >Close</button>
                    <form action="/profile/followings/{{myProfile._id}}">
                      <button class="btn btn-success">See more followings</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

  {{! divs grans }}
  <div id="publications-profile" class="flex-column">

    <h1 class="text-center">My Publications</h1>

    <div class="flex-row flex-wrap padding-m">
      {{#each myPublications}}
        <div class="d-flex flex-column box-border margin-m padding-m">
          <a
            class="text-decoration-none text-width minus-margin"
            href="/details/{{this._id}}"
          >{{this.description}}</a>

          <a class="text-decoration-none" href="/details/{{this._id}}">
            <div class="with300">
              <div>

                <pre class="card-body2"><code
                    class="{{language this.language}}"
                  >{{this.code}}</code></pre>
              </div>
              <div class="flex-row bottom-card">
                <div class="card-details flex-row">
                  <div class="like-details">
                    <form method="post" action="/like/{{this._id}}">
                      <code class="code-size">{{count this.likes}}</code>
                      <input
                        type="image"
                        src="/images/heart-red.png"
                        width="20px"
                        alt="heart-red"
                        name="like"
                        style="display: {{userLiked this.likes true}}"
                      />
                      <input
                        type="image"
                        src="/images/heart-empty.png"
                        width="20px"
                        alt="heart-red"
                        name="like"
                        style="display: {{userLiked this.likes false}}"
                      />
                    </form>
                  </div>
                  <div class="messages-details">
                    <code class="code-size">{{count this.comments}}</code>
                    <img src="/images/comment.png" alt="comment" width="20px" />
                  </div>
                </div>
                <div>
                  <a href="/details/{{this._id}}"><img
                      src="/images/points.png"
                      alt=""
                      width="25px"
                    /></a>
                </div>
              </div>

            </div>
          </a>
        </div>

      {{/each}}
    </div>

  </div>
</div>